<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/fragment_background"
    android:layout_margin="1dp">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/item_ability_img"
        android:layout_alignParentStart="true"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/item_ability_name"
        android:layout_below="@id/item_ability_img"

        android:textSize="12sp"
        android:textColor="@color/text_enabled"
        />
    <TextView
        android:id="@+id/item_ability_introduction"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_toRightOf="@id/item_ability_img"
        android:textSize="14sp"
        android:textColor="@color/text_disabled"/>
</RelativeLayout>
